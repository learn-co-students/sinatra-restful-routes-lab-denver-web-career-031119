<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <ul>
    <li>
      <label for="name">Recipe :</label>
      <input id="name" type="text" name="recipe[name]" value="<%= @recipe.name %>"/>
    </li>
    <br>
    <li>
      <label for="ingredients">Ingredients :</label>
      <input id="ingredients" type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients %>"></input>
    </li>
    <br>
    <li>
      <label for="cook_time">Cook Time :</label>
      <input id="cook_time" type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %>"></input>
    </li>
  </ul>

  <input type="submit" value="Edit Recipe">
</form>
